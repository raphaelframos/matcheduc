<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_tinder">

    <fragment
        android:id="@+id/navigation_home"
        android:name="powellapps.matcheduc.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_report"
        android:name="powellapps.matcheduc.ui.report.ReportFragment"
        android:label="@string/relatorio"
        tools:layout="@layout/fragment_report" />
    <fragment
        android:id="@+id/navigation_profile"
        android:name="powellapps.matcheduc.ui.profile.ProfileFragment"
        android:label="@string/perfil"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/navigation_tinder"
        android:name="powellapps.matcheduc.ui.cardstack.TinderFragment"
        android:label="Tema"
        tools:layout="@layout/fragment_tinder" />
</navigation>
